
<h4>Students</h4>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Highest Education</th>
      <th>Cohort ID</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @student.each do |student| %>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.age %></td>
          <td><%= student.highest_education %></td>
          <td><%= student.cohort_id %></td>
          
          <td><%= link_to 'Edit', edit_student_path(student), remote:true %></td>

          <td id='student-<%= student.id %>'>><%= link_to 'Delete', student_path(student), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
          
        </tr> 
      <% end %>
  </tbody>
</table>



