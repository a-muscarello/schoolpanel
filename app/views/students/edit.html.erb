
        <%= form_for @student do |f| %>
            <ul>
            
            <li><%= f.label :first_name %></li>
            <li><%= f.text_field :first_name, value: @student.first_name %></li>
    
            <li><%= f.label :last_name %></li>
            <li><%= f.text_field :last_name, value: @student.last_name %></li>
    
            <li><%= f.label :age %></li>
            <li><%= f.number_field :age, value: @student.age %></li>
    
            <li><%= f.label :highest_education %></li>
            <li><%= f.text_field :highest_education, value: @student.highest_education %></li>
    
            <li><%= f.label :cohort_id %></li>
            <li><%= f.number_field :cohort_id, value: @student.cohort_id %></li>
                
            <%= f.submit %>
            <% end %>
    
            </ul>
            
    <%= link_to "Delete", student_path(@student), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %>
    