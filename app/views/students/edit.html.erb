
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
        <%= form_for @student, remote: true do |f| %>
            <tr><td><%= f.label :first_name %></td></tr>
            <tr><td><%= f.text_field :first_name, value: @student.first_name %></td></tr>

            <tr><td><%= f.label :last_name %></td></tr>
            <tr><td><%= f.text_field :last_name, value: @student.last_name %></td></tr>

            <tr><td> <%= f.label :age %></td></tr>
            <tr><td><%= f.number_field :age, value: @student.age %></td></tr>

            <tr><td><%= f.label :highest_education %></td></tr>
            <tr><td><%= f.text_field :highest_education, value: @student.highest_education %></td></tr>

            <tr><td><%= f.label :cohort_id %></td></tr>
            <tr><td><%= f.number_field :cohort_id, value: @student.cohort_id %></td></tr>
            <%= f.submit %>
        <% end %>
        </tr>
    </thead>
</table>


<%= link_to "Delete", student_path(@student), remote: true, method: :delete %>
