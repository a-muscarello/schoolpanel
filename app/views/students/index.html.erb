
  <table class="table table-striped">
  <thead class="thead">
    <tr>
    <form>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Age</th>
      <th scope="col">Highest Education</th>
      <th scope="col">Cohort ID</th>
    </form>
    </tr>
  </thead>

  <tbody>
    <tr>
      <form>
        <% @student.each do |student| %>
            <td><%= student.first_name %></td>
            <td><a class="nav-link" href="/students/<%= student.id %>"><%= student.last_name %></a></td>
            <td><%= student.age %></td>
            <td><%= student.highest_education %></td>
            <td><%= student.cohort_id %></td>
            
            <td><%= link_to "Edit", edit_student_path(student) %></td>
            <td id="student-<%= student.id %>"><%= link_to "Delete", student_path(student), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr> 
          <% end %>
      </form>
  </tbody>
</table>

